---
import BaseHead from '$components/BaseHead.astro';
import Header from '$components/Header.astro';
import Footer from '$components/Footer.astro';
import { SITE_URL } from '~/consts';
import { ghostClient } from '$libs/ghost';
import '~/styles/global.css';
import IndexLayout from '$layouts/extends/IndexLayout.astro';
const posts = await ghostClient.posts
    .browse({
        limit: 10,
    })
    .catch((err) => {
        console.error(err);
    });
    
import type HeadMetaType from '$types/HeadMetaType';
const headMeta:HeadMetaType = {
    title:'とっぷ',
    slug:'',
    description:'「急須で入れたようななにか」のトップページです',
    ogImage: SITE_URL+'/images/ogp/ogp.png',
};
---

<IndexLayout {...headMeta} >
			<h1>🧑‍🚀 Hello, usuyuki!!!!!adaddaa!a</h1>
		        {
            posts.map((post) => (
                <a href={`/${post.slug}`}>
				<img src={post.feature_image} />
                    <h2 class="text-4xl text-black"> {post.title} </h2>
                </a>
            ))
        }
</IndexLayout>
