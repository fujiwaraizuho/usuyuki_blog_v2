---
const props = Astro.props;
const classMap: any = {
	'kg-card kg-bookmark-card': 'bg-black text-white mx-4 my-2 p-2 md:w-1/2 rounded-lg dotted border-black border-2',
};
const newClass = Object.hasOwn(classMap, props.class) ? classMap[props.class] : props.class;
---

<figure class={newClass}><slot /></figure>
