---
import ArchiveList from '~/components/molecule/widget/ArchiveList.astro';
import LatestArticleList from '~/components/organism/article/LatestArticleList.astro';
import TagList from '~/components/organism/tag/TagList.astro';
import BaseLayout from '~/layouts/BaseLayout.astro';
const headMeta = Astro.props;
---

<BaseLayout {...headMeta}>
	<slot />
	<hr class="mt-12" />
	<div class="flex justify-center flex-wrap">
		<div class="w-full md:w-1/3">
			<h2 class="text-2xl font-bold">Recent</h2>
			<LatestArticleList class="mx-auto" />
		</div>

		<div class="w-full md:w-1/3">
			<h2 class="text-2xl font-bold">Tags</h2>
			<TagList class="mx-auto" />
		</div>

		<div class="w-full md:w-1/3">
			<h2 class="text-2xl font-bold">Archive</h2>
			<ArchiveList class="mx-auto" />
		</div>
	</div>
</BaseLayout>
